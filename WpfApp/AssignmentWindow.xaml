<Window x:Class="WpfApp.AssignmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="AssignmentWindow" Height="450" Width="800">
    <Grid Background="#4472c4">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="0,48,0,0">
            <TextBox Name="FactorValue" BorderBrush="Black" BorderThickness="2" Width="80" Height="25" VerticalAlignment="Center" Margin="305,0,0,0"/>
            <Button Name="AddFactorBtn" Click="AddFactorBtn_Click" Content="Add Factor"  Width="100" Height="25" VerticalAlignment="Center" Margin="15,0,0,0" BorderBrush="Black" BorderThickness="2" FontWeight="DemiBold"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Vertical">
            <ListBox Name="AssignmentListBox" Grid.Row="1" Width="250" Height="240" FontSize="16" FontWeight="DemiBold"/>
        </StackPanel>
    </Grid>
</Window>
